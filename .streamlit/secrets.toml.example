# Streamlit Secrets Configuration
# Copy this file to secrets.toml and fill in your actual values
# For local development: .streamlit/secrets.toml
# For Streamlit Cloud: Configure in App Settings > Secrets

# === OpenAI API Key ===
OPENAI_API_KEY = "your-api-key-here"

# === Data & Storage ===
PDF_PATH = "data/mastersprograminanalytics.pdf"
HTML_DIR = "data"
CHROMA_DIR = ".chroma"

# === Embedding & Chat Models ===
EMBED_MODEL = "text-embedding-3-large"
CHAT_MODEL = "gpt-4o-mini"

# === Token-Based Chunking ===
CHUNK_TOKENS = "600"
OVERLAP_TOKENS = "150"

# === Retrieval / Grounding ===
TOP_K = "5"
MIN_SIM = "0.20"

# === Generation ===
TEMPERATURE = "0.2"
MAX_TOKENS = "800"
